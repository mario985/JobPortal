@model LogInViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-sign-in-alt me-2"></i>Welcome Back</h2>
            <p>Sign in to your account to continue</p>
        </div>

        <form asp-action="LogIn" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email Address
                </label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock me-2"></i>Password
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Remember me
                    </label>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <button type="submit" class="btn btn-primary auth-btn">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </button>
        </form>

        <div class="auth-footer">
            <p>Don't have an account? 
                <a asp-action="RegisterAsUser" class="text-primary">Register as Job Seeker</a> or 
                <a asp-action="RegisterAscompany" class="text-primary">Register as Company</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 