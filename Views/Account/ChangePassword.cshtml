@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Account/ChangePassword.css" asp-append-version="true" />
}

<div class="change-password-container">
    <div class="change-password-card">
        <div class="change-password-header">
            <h2><i class="fas fa-key me-2"></i>Change Password</h2>
            <p>Update your account password</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="ChangePassword" method="post" class="change-password-form" id="changePasswordForm">
            <div class="form-group">
                <label asp-for="CurrentPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>Current Password
                </label>
                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter your current password" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>New Password
                </label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <small class="form-text text-muted">Password must be at least 6 characters long</small>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>Confirm New Password
                </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <button type="submit" class="btn btn-primary change-password-btn">
                <i class="fas fa-key me-2"></i>Change Password
            </button>
        </form>

        <div class="change-password-footer">
            <p>Want to update your account information? 
                <a asp-action="UpdateAccount" class="text-primary">Update Account</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/changePassword.js"></script>
} 