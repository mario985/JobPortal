@model IEnumerable<JobApplication>

@{
    ViewData["Title"] = "My Applications";
}

<link rel="stylesheet" href="~/css/JobApplication/UserApplications.css" />



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="content-card">
                <div class="card-header">
                    <h3 class="text-center mb-0">My Applications</h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">No Applications Yet</h4>
                                <p class="text-muted">You haven't applied to any jobs yet. Start your job search today!</p>
                                <a href="@Url.Action("Index", "Job")" class="btn btn-modern">
                                    <i class="fas fa-search"></i> Browse Jobs
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Job Title</th>
                                        <th>Company</th>
                                        <th>Location</th>
                                        <th>Salary</th>
                                        <th>Applied Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var application in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@application.Job?.Title</strong>
                                                <br>
                                                <small class="text-muted">@application.Job?.Type</small>
                                            </td>
                                            <td>@application.Job?.Company?.UserName</td>
                                            <td>@application.Job?.Location</td>
                                            <td>$@application.Job?.Salary.ToString("N0")</td>
                                            <td>@application.Job?.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @switch (application.Status)
                                                {
                                                    case JobApplication.ApplicationStatus.pending:
                                                        <span class="badge badge-warning">Pending</span>
                                                        break;
                                                    case JobApplication.ApplicationStatus.accepted:
                                                        <span class="badge badge-success">Accepted</span>
                                                        break;
                                                    case JobApplication.ApplicationStatus.rejected:
                                                        <span class="badge badge-danger">Rejected</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">Unknown</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "JobApplication", new { jobId = application.JobId, userId = application.UserId })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    <a href="@Url.Action("Details", "Job", new { id = application.JobId })" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-briefcase"></i> Job
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="application-stats mt-4">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon pending">
                                            <i class="fas fa-clock"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h4>@Model.Count(a => a.Status == JobApplication.ApplicationStatus.pending)</h4>
                                            <p>Pending</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon accepted">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h4>@Model.Count(a => a.Status == JobApplication.ApplicationStatus.accepted)</h4>
                                            <p>Accepted</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon rejected">
                                            <i class="fas fa-times-circle"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h4>@Model.Count(a => a.Status == JobApplication.ApplicationStatus.rejected)</h4>
                                            <p>Rejected</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card">
                                        <div class="stat-icon total">
                                            <i class="fas fa-file-alt"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h4>@Model.Count()</h4>
                                            <p>Total</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="@Url.Action("Index", "Job")" class="btn btn-modern">
                    <i class="fas fa-search"></i> Browse More Jobs
                </a>
            </div>
        </div>
    </div>
</div> 