@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content fade-in-up">
            <h1 class="hero-title">Find Your Dream Job or Top Talent Today</h1>
            <p class="hero-subtitle">AI-powered job matching platform connecting talented professionals with innovative companies</p>
            
            <div class="hero-buttons">
                <a asp-controller="Account" asp-action="RegisterAsUser" class="btn btn-hero btn-primary-hero">
                    <i class="fas fa-search me-2"></i>Apply for Jobs
                </a>
                <a asp-controller="Account" asp-action="RegisterAsCompany" class="btn btn-hero btn-success-hero">
                    <i class="fas fa-plus me-2"></i>Post a Job
                </a>
            </div>
            
            <div class="search-section">
                <form class="search-form">
                    <input type="text" class="search-input" placeholder="Job Title or Keyword" required>
                    <input type="text" class="search-input" placeholder="Location" required>
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search me-2"></i>Search Jobs
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

